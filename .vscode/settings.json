{
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "black-formatter.args": [
        "--line-length", "88",

    ],

    "flake8.args": [
     "--max-line-length", "88",
     "--extend-ignore", "E203",
     "--select", "W503"
    ],

    "files.trimTrailingWhitespace": true,

    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    }
}